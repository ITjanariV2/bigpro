<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://fonts.googleapis.com/css?family=Open Sans' rel='stylesheet'>
    <script src="welcome.js" defer></script>
    <link rel="stylesheet" type="text/css" href="/styleHome.css">
    <link rel="stylesheet" type="text/css" href="/chatStyle.css">

    <script src="/node_modules/socket.io/client-dist/socket.io.js"></script>

    <title>Document</title>
</head>
<body>
    <!-- <div id="message">Hello, <%= name %>!</div> -->

    <section class="container">
          <div class="chatbox">
          <ul id="messagelist"></ul>
  
          <form class="messageForm">
            <input type="text" class="messageFormInput" placeholder="Type a message" />
            <button class="sendTextBtn"><svg class="svgSendBtn" xmlns="http://www.w3.org/2000/svg" width="40" height="40" class="bi bi-send-fill" viewBox="0 0 16 16">
              <path d="M15.964.686a.5.5 0 0 0-.65-.65L.767 5.855H.766l-.452.18a.5.5 0 0 0-.082.887l.41.26.001.002 4.995 3.178 3.178 4.995.002.002.26.41a.5.5 0 0 0 .886-.083zm-1.833 1.89L6.637 10.07l-.215-.338a.5.5 0 0 0-.154-.154l-.338-.215 7.494-7.494 1.178-.471z"/>
            </svg></button>

          </form>
        </div>
        <div class="activeUsersContainer">
          <div>
            <h2>Active Users</h2>
            <ul id="users"></ul>
          </div>
          <form id="logOutForm" action="/logout?_method=DELETE" method="POST">
            <button id="logOut" type="submit">Log Out</button>
          </form>
        </div>

    </section>

<script type="text/javascript" src="/socketOn.js"></script>
</body>
</html>